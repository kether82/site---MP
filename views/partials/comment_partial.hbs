<div class="comment description">
    <div class="card-header person">
        {{poster_name}}
        {{#if poster_owner_flag}}
        <div class="float-right">
            <button class="btn btn-outline-dark edit-comment"><i class="fas fa-pencil-alt"></i></button>
            <button class="btn btn-outline-dark delete-comment"><i class="fas fa-trash-alt"></i></button>
            <div class="secret-data">
                {{comment_id}}
            </div>
        </div>
        
        {{/if}}
    </div>
    <div class="card-body text">
        {{description}}
    </div>
    

    <br><br>
</div>