<!doctype html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
		integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
		integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
	<link rel="stylesheet" href="../CSS/listing.css">

	<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
	<script src="/JS/listing.js" type="text/javascript"></script>
</head>

<body>
	<!-- Optional JavaScript -->

	<!-- jQuery first, then Popper.js, then Bootstrap JS -->
	
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
		integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
		crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
		integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
		crossorigin="anonymous"></script>
	<!-- <script type="text/javascript" src="../JS/product.js"></script> -->
	<div class="container-fluid">
		<div class="row">
			{{>nav_partial}}
			<!-- outside -->
			<div class="col-md-10 ">
				<div class="page-darken"></div>
				<div class="row content">
					<div class="col-md-4">
						<img src="{{image}}" class="picture card-img" alt="item image">
						<br><br>
						<div class="CRUD">
							{{#if owner_flag}}
							{{!-- <a class="btn btn-outline-dark" href="product_edit.html"><i class="fas fa-pencil-alt"
									aria-hidden="true"></i> </a> --}}
							<button id="edit-info" class="btn btn-outline-dark"><i class="fas fa-pencil-alt"
									aria-hidden="true"></i>
								Edit Info</button>
							{{!-- <a class="btn btn-outline-dark" href="product_del.html"><span
									class="fas fa-trash"></span>
								Delete</a> --}}
							<button id="del-listing" class="btn btn-outline-dark"><i class="fas fa-trash"
									aria-hidden="true"></i>
								Delete</button>
							{{/if}}
							{{!-- EDIT HREF HERE REDIRECT TO USER'S PAGE OR SMTHING --}}
							{{!-- <a href="{{}}" class="btn btn-outline-dark"><i class="fas fa-phone" aria-hidden="true"></i>
								Contact
								Seller</a> --}}
						</div>
					</div>
					<div class="content col-md-8">
						<div class=" description card-body">
							{{item_name}}
						</div>
						<div class="description card-header">
							Item Description
						</div>
						<div class="description card-body">
							{{item_desc}}
						</div>

					</div>
					<br><br>
				</div>
				<hr>
				{{#each comments}}
				{{>comment_partial }}
				{{/each}}
				<div class="edit-container card">
					<div class="row card-header d-flex justify-content-between">
						<h3 class="dropdown-header text-font">Edit Information</h3>
						<button id="exit-edit" class="btn btn-outline-secondary float-right">X</button>
					</div>
					<div class="card-body">
						<form>
							<div class="container-fluid">
								<div class="form-group">
									<label for="name">Item name</label>
									<input type="text" class="form-control" id="iName" name="name"
										placeholder="Input new item name / Leave blank for no changes">
								</div>
							</div>
							<div class="container-fluid">
								<div class="form-group">
									<label for="description">Item Description</label>
									<input type="text" class="form-control" id="iDescription" name="description"
										placeholder="Input new item description / Leave blank for no changes">
								</div>
							</div>
							<div class="container-fluid">
								<div class="form-group">
									<label for="itemPic">Item Image</label>
									<input type="file" class="form-control" id="itemPic" name="itemPic" accept="image/*">
								</div>
							</div>
							<div class="container-fluid">
								Leave field blank if there are no changes to the field.
							</div>
							<div id="edit-error-msg" class="container-fluid error-edit-msg">
								Please fill up atleast one field that you want to edit.
							</div>
						</form>
						<div class="text-center mt-2 text-center mt-4">
							<button id="confirm-edit" class="btn btn-outline-secondary btn-sm">Confirm</button>
						</div>
					</div>
				</div>
				<div class="delete-container card">
					<div class="">
						<h3 class="dropdown-header text-center"><i id="warning-icon"
								class="fas fa-exclamation-circle"></i>
						</h3>
					</div>
					<div class="card-body">
						<div class="warning-msg">
							<h3>Your item will be deleted permanently !</h3>
						</div>
						<div class="warning-submsg mb-4">
							<h6>Are you sure to proceed?</h6>
						</div>
						<div class="row d-flex justify-content-around">

							<button id="cancel-delete" class="btn btn-outline-secondary">Cancel</button>
							<a href="/delete_account/{{user_name}}">
								<button id="confirm-delete" class="btn btn-danger">Delete</button> </a>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>

</html>